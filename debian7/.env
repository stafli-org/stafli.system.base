# Load project settings
source $(dirname "${BASH_SOURCE[0]}")/../.env;

# Distro settings
distro_id="debian7"
distro_description="Debian 7 (wheezy)"
distro_label_url="${project_label_url}.${distro_id}"
distro_image_url="${project_image_url}:${distro_id}"

# General settings
general_context="./dockerfiles"
general_network_driver="bridge"
general_logging_driver="json-file"
general_working_dir="/tmp"

# Minimal service/profile
service_minimal_id="minimal"
service_minimal_description="${project_description} - Minimal profile, based on ${distro_description}"
service_minimal_label_url="${distro_label_url}_${service_minimal_id}"
service_minimal_image_url="${distro_image_url}_${service_minimal_id}"
service_minimal_dockerfile="minimal.dockerfile"
service_minimal_command="/bin/bash"

# Standard service/profile
service_standard_id="standard"
service_standard_description="${project_description} - Standard profile, based on Minimal"
service_standard_label_url="${distro_label_url}_${service_standard_id}"
service_standard_image_url="${distro_image_url}_${service_standard_id}"
service_standard_dockerfile="standard.dockerfile"
service_standard_networking_port_int1="22"
service_standard_args_app_dropbear_listen_addr="0.0.0.0"
service_standard_args_app_dropbear_listen_port="${service_standard_networking_port_int1}"
service_standard_args_app_dropbear_key_size="4096"
service_standard_command="/usr/bin/supervisord -c /etc/supervisor/supervisord.conf --nodaemon"

# Development service/profile
service_devel_id="devel"
service_devel_description="${project_description} - Devel profile, based on Development"
service_devel_label_url="${distro_label_url}_${service_devel_id}"
service_devel_image_url="${distro_image_url}_${service_devel_id}"
service_devel_dockerfile="devel.dockerfile"
service_devel_networking_port_int1="22"
service_devel_command="/usr/bin/supervisord -c /etc/supervisor/supervisord.conf --nodaemon"

