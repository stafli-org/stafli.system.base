# Load project settings
source $(dirname "${BASH_SOURCE[0]}")/../.env;

# Distro settings
distro_id="centos7"
distro_description="CentOS7 (centos7)"
distro_label_url="${project_label_url}.${distro_id}"
distro_image_url="${project_image_url}:${distro_id}"

# General settings
general_context="./dockerfiles"
general_network_driver="bridge"
general_logging_driver="json-file"
general_working_dir="/tmp"

# Base service/profile
service_base_id="base"
service_base_description="${project_description} - Base profile, based on ${distro_description}"
service_base_label_url="${distro_label_url}_${service_base_id}"
service_base_image_url="${distro_image_url}_${service_base_id}"
service_base_dockerfile="base.dockerfile"
service_base_command="/bin/bash"

# Development service/profile
service_devel_id="devel"
service_devel_description="${project_description} - Devel profile, based on ${distro_description}"
service_devel_label_url="${distro_label_url}_${service_devel_id}"
service_devel_image_url="${distro_image_url}_${service_devel_id}"
service_devel_dockerfile="devel.dockerfile"
service_devel_command="/bin/bash"

